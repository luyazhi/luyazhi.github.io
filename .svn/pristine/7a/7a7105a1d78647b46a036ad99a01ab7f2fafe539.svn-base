/* pages/index/detail/reserve/reserve.wxss */
@import "indent/indent.wxss";
page {
  background: rgba(224, 224, 224, 0.3215686274509804);
}

text, input {
  color: #000;
}

.person-wrap {
  width: 94%;
  margin: 20rpx auto 20rpx auto;
  min-height: 180rpx;
  background: #fff;
  border-radius: 14rpx;
  padding: 40rpx 0;
}

.titleText {
  font-size: 36rpx;
  color: #000;
  margin: 0 24px;
  padding: 10rpx 0;
  display: block;
}

.audioStyle {
  width: 86%;
  margin: 0 auto;
}

.showtText {
  color: #000;
  display: block;
  margin: 13rpx 24px;
  font-size: 26rpx;
  line-height: 42rpx;
}

image.img1 {
  width: 86%;
  margin: 24rpx auto;
  display: block;
  height: 350rpx;
}

.hide {
  display: none;
}

.more {
  display: block;
  text-align: center;
  color: #0084ff;
  font-size: 28rpx;
}

.contbox {
  display: flex;
  justify-content: space-between;
  width: 100%;
  margin: 12rpx auto 0 auto;
  height: 42px;
  font-size: 26rpx;
  border-bottom:1px solid #ccc;

}

images.itembox {
  display: block;
  width: 45rpx;
  height: 45rpx;
  border: 1px solid #ccc;
}

.itembox {
 
  margin:4px 14px 0 24px;
}

.itembox1 {
  width: 50rpx;
}

.itembox2 {
  width: 80%;
  line-height: 26px;
  color: #000;
}

.itembox3 {
  width: 70%;
  display: flex;
  height:58rpx;
  line-height:58rpx;
}

.pickery{
  width: 100%;
  text-align: center;
}

.butstyle {
  width: 78rpx;
  height: 58rpx;
  line-height: 58rpx;
  float: left;
  padding: 0;
}

.inputstylex {
  width: 80rpx;
  float: left;
  display: flex;
  border: 1px solid #ccc;
  text-align: center;
  z-index: 0;
}

.titleTxt {
  color: #000;
  font-size: 24rpx;
  margin:0 24px;
width:90%;
display:block;

}

.servicebox {
  display: flex;
  width: 80%;
  margin: 0 auto;
}

.item {
  width: 33.33%;
  display: inline-block;
 float: left;
}

image.img {
  border: 1px solid #ccc;
  width: 150rpx;
  height: 150rpx;
  display: block;
  border-radius: 50%;
  margin: 0 0 10rpx 15rpx;
}

.item text {
  font-size: 26rpx;
  text-align: center;
  display: block;
  color: #000;
  
}
.address_add{
  position: fixed;
  bottom: 0;
  width: 100%;
}
.buttonSub{
  width: 50%;
  float: left;
  display: block;
  border-radius: 0;
}
button[plain] {
color:#fff;
background-color:#bfddff;
border: none;
}


