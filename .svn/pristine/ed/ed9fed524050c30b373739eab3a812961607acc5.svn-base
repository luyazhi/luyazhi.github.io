<view class="person-wraps">
  <view class="menu_text">
    <title class="manytitle">定制路线</title>
  </view>
  <view class="contbox" style='border:none;'>
      <text class="itembox itembox2">人数：2成人</text>
    <view class="itembox itembox3">
      <text class="butstyle">-</text>
      <input type='text' class="inputstylex" placeholder='2'></input>
      <text class="butstyle">+</text>
    </view>
  </view>
  <view class="contbox">
    <text class="itembox itembox2" style='padding-left:10%;width:65%'>0儿童</text>
    <view class="itembox itembox3">
      <text class="butstyle">-</text>
      <input type='text' class="inputstylex" placeholder='0'></input>
      <text class="butstyle">+</text>
    </view>
  </view>
  <view class="contbox">
    <text class="itembox itembox2">车辆：</text>
    <view class="itembox itembox3">
      <text class="butstyle">-</text>
      <input type='text' class="inputstylex" placeholder='1'></input>
      <text class="butstyle">+</text>
    </view>
  </view>
  <view class="contbox">
    <text class="itembox itembox2">到店时间：{{date}}</text>
    <view class="itembox itembox3">
      <picker mode="date" value="{{date}}" start="2018-06-01" bindchange="bindDateChange" class='pickery'>选择
      </picker>
    </view>
  </view>
  <view class="contbox">
    <text class="itembox itembox2">费用合计：￥1,200</text>
  </view>
  <view style='border:none'>
    <text class="text1">费用包含：</text>
    <text class="text2">5人景区门票</text>
    <text class="text2">5人漂流门票</text>
    <text class="text2">1pickman专属车辆</text>
    <text class="text2">以及专属路线顾问服务费用</text>
  </view>
</view>

<view class="person-wrap" style='margin-bottom:454rpx;'>
  <view class="menu_text">
    <title class="manytitle">服务承诺</title>
  </view>
  <view class="servicebox">
    <view class="item">
      <image class="img" src="../../images/myfeixing.png"></image>
      <text>7*24小时专属服务</text>
    </view>
    <view class="item">
      <image class="img" src="../../images/myfeixing.png"></image>
      <text>不满意随时退款</text>
    </view>
    <view class="item">
      <image class="img" src="../../images/myfeixing.png"></image>
      <text>专程专属顾问保障</text>
    </view>
  </view>
</view>

<view class="address_add">
  <button plain class="buttonSub" bindtap="onChangeShowState" style='background:#ccc' wx:if="{{ShowState}}" open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">感兴趣</button>
  <button plain class="buttonSub" style='background:#ccc' wx:if="{{ShowStates}}">已感兴趣</button>
  <button plain class="buttonSub" bindtap='showDialogBtn' open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">立即预定</button>
  <view class="search-panel" wx:if="{{showModal}}">
    <template is="reserveIndent" />
  </view>

</view>