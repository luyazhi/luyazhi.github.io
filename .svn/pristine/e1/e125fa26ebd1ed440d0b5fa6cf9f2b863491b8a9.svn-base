.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
.modal-dialog {
  width: 540rpx;
  height: 350rpx;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: auto;
  border-radius: 36rpx;
}
.modal-title {
  padding-top: 30rpx;
  font-size: 32rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  border-radius: 4rpx;
  font-size: 28rpx;
  height: 200rpx;
  padding-left: 20rpx;
}
.modal-content view{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
}

input-holder {
  color: #666;
  font-size: 32rpx;
}
.modal-footer {
  display: flex;
  flex-direction: row;
  height: 75rpx;
  border-top: 1px solid #dedede;
  font-size: 28rpx;
  line-height: 75rpx;
}
.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}
.btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}