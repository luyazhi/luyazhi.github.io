<import src="indent/indent.wxml" />
<view class="person-wrap">
  <view class="menu_text">
    <title class="manytitle">探密金秋童话+体验丝路之美体验丝路之美</title>
    <text class="showtText" style="margin-bottom:64rpx;">桃花潭位于泾县以西40公里处桃花潭位于泾县</text>
    <view class="imglist">
      <swiper class="swiper" autoplay="true" interval="{{interval}}" circular="{{circular}}" bindchange='swiperChange'>
        <block wx:for="{{banners}}" wx:key="">
          <swiper-item>
            <image src="{{item.travelPic}}" class="img1" mode="aspectFill" />
          </swiper-item>
        </block>
      </swiper>
      <text class="imgico">已售100</text>

    <image class="dots" src="../../../images/Rectangle.png">
        <text class="dotstext">{{swiperCurrent}}/5</text>
      </image> 

    </view>

    <text class="showtText">本套餐包含了</text>
    <text class="showtText">一辆pickman车</text>
    <text class="showtText">5张景区门票</text>
    <text class="showtText">pickman专享车辆驾驶费用</text>
    <text class="showtText">可自由更改人数</text>
    <image class="img1 imgmap" src="../../../images/map_img.png" style="height:362rpx;"></image>
    <image src="../../../images/img2.png" style="width:76%;height:78rpx;"></image>
    <view class="imglist">
      <view>
        <image class="img1" style='margin:0;' src="../../../images/pic3.png"></image>
        <image class="pic1" src='../../../images/Rectangle.png'>
          <text>3日包车</text>
        </image>
        <image class="pic2" src="../../../images/pic2.png">
          <text>2座</text>
        </image>
        <text class="pic2">2座</text>
      </view>
    </view>
    <text class="more">阅读更多</text>
  </view>
</view>

<view class="person-wraps">
  <view class="menu_text">
    <title class="manytitle dinzhitxt">定制路线</title>
  </view>
  <view class="contbox" style='border:none;'>
    <text class="itembox itembox2">人数：成人</text>
    <view class="itembox itembox3">
      <button class="butstyle" bindtap="bindMinus">-</button>
      <text class="inputstylex" bindinput='bindManual'>{{num}}</text>
      <button class="butstyle" bindtap="bindPlus">+</button>
    </view>
  </view>

  <view class="contbox">
    <text class="itembox itembox2" style='padding-left:11.5%;width:65%'>儿童</text>
    <view class="itembox itembox3">
      <button class="butstyle" bindtap="bindMinus">-</button>
      <text class="inputstylex" bindinput='bindManual'>{{num}}</text>
      <button class="butstyle" bindtap="bindPlus">+</button>
    </view>
  </view>
  <view class="contbox">
    <text class="itembox itembox2">车辆：</text>
    <view class="itembox itembox3">
      <text bindtap="showlogingBtn" class='pickery'>选择  </text>
    </view>
  </view>


  <view class="contbox">
    <text class="itembox itembox2">到店时间：{{date}}</text>
    <view class="itembox itembox3">
      <picker mode="date" value="{{date}}" start="2018-06-01" bindchange="bindDateChange" class='pickery'>选择
      </picker>
    </view>
  </view>
  <view class="contbox">
    <text class="itembox itembox2">费用合计：￥1,200</text>
  </view>
  <view style='border:none'>
    <text class="text1">费用包含：</text>
    <text class="text2">5人景区门票</text>
    <text class="text2">5人漂流门票</text>
    <text class="text2">1pickman专属车辆</text>
    <text class="text2">以及专属路线顾问服务费用</text>
  </view>
</view>

<view class="person-wrap" style='margin-bottom:454rpx;'>
  <view class="menu_text">
    <title class="manytitle">服务承诺</title>
  </view>
  <view class="servicebox">
    <view class="item">
      <image class="img" src="../../../images/VCG41473359596.png"></image>
      <text>7*24小时专属服务</text>
    </view>
    <view class="item">
      <image class="img" src="../../../images/QJ6827944719.png"></image>
      <text>不满意随时退款</text>
    </view>
    <view class="item">
      <image class="img" src="../../../images/VCG211133129042Copy.png"></image>
      <text>专程专属顾问保障</text>
    </view>
  </view>
</view>
<view class="address_add">
  <!-- bindtap="onChangeShowState"  open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber" -->
  <button plain class="buttonSub" open-type="getPhoneNumber" catchtap="onCollectionTap" style='background:#9B9B9B;width:39.5%;margin:0 0.5rpx 0 0;'>感兴趣</button>
  <button plain class="buttonSub" style='background:#ccc;width:39.5%;margin:0 0.5rpx 0 0;' wx:if="{{ShowStates}}">已感兴趣</button>
  <button style="width:60%;float:right" plain class="buttonSub" bindtap='showDialogBtn' open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">立即预定¥1200</button>

  <view class="search-panel" wx:if="{{showModal}}">
    <template is="reserveIndent" />
  </view>
  <!--选择车辆-->
  <view class="search-panel" wx:if="{{show_Modal}}">
    <template is="choice_car" />
  </view>
</view>