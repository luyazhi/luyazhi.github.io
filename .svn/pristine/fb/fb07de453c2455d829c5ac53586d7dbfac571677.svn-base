  <view class="address_add">
    <button plain class="buttonSub" bindtap="onChangeShowState" style='background:#ccc' wx:if="{{ShowState}}" open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">感兴趣</button>
    <button plain class="buttonSub" style='background:#ccc' wx:if="{{ShowStates}}">已感兴趣</button>
    <button plain class="buttonSub" bindtap='showDialogBtn' open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">立即预定</button>
    <view class="search-panel"  wx:if="{{showModal}}">
        <template is="reserveIndent"/>
    </view>
    
